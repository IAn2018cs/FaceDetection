<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_check_card"
    android:layout_width="wrap_content"
    android:layout_height="120.0dip"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:visibility="invisible">

    <ImageView
        android:id="@+id/iv_check_face"
        android:layout_width="98.0dip"
        android:layout_height="fill_parent"
        android:background="@drawable/check_success_face_bg"
        android:padding="2.0dip"
        android:scaleType="centerCrop" />

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_text_bg"
        android:layout_width="fill_parent"
        android:layout_height="120.0dip"
        android:background="@drawable/check_success_text_bg">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="张三"
            android:textColor="#ffffffff"
            android:textSize="24.0sp"
            app:layout_marginLeftPercent="2.699995%" />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_name"
            android:text="刷脸成功"
            android:textColor="#ffffffff"
            android:textSize="20.0sp"
            app:layout_marginLeftPercent="3.2999992%"
            app:layout_marginRightPercent="10.000002%" />
    </android.support.percent.PercentRelativeLayout>
</LinearLayout>