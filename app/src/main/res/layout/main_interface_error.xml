<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/interface_error_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/interface_error_bg"
    android:visibility="invisible">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/app_bg_error" />

    <com.jdjr.courtcanteen.view.TimeTextView
        android:id="@id/tv_now_time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="09:00:00"
        android:textColor="#ffffffff"
        android:textSize="@dimen/time_text_view_size"
        app:layout_marginTopPercent="1.9999981%" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_now_time2"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="互联网法院刷脸用餐"
        android:textColor="#ffffffff"
        android:textSize="36.0sp"
        app:layout_marginTopPercent="0.8000016%" />

    <ImageView
        android:id="@+id/iv_error_kuang2"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:layout_centerHorizontal="true"
        android:src="@drawable/error_kuang"
        app:layout_heightPercent="26.0%"
        app:layout_marginLeftPercent="14.999998%"
        app:layout_marginRightPercent="14.999998%"
        app:layout_marginTopPercent="36.899994%"
        app:layout_widthPercent="70.1%" />

    <TextView
        android:id="@+id/tv_interface_error_msg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_error_kuang2"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/interface_error_msg1"
        android:textColor="#ffffffff"
        android:textSize="30.0sp"
        app:layout_marginTopPercent="7.0000052%" />

    <TextView
        android:id="@+id/tv_interface_error_msg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_interface_error_msg1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/interface_error_msg2"
        android:textColor="#ffffffff"
        android:textSize="30.0sp"
        app:layout_marginTopPercent="0.8000016%" />

    <TextView
        android:id="@+id/tv_interface_error_msg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_interface_error_msg2"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/interface_error_msg3"
        android:textColor="#ffffffff"
        android:textSize="18.0sp"
        app:layout_marginTopPercent="1.9999981%" />
</android.support.percent.PercentRelativeLayout>